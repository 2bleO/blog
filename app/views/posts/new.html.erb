<%= render partial: 'shared/header' %>
<h1>New post</h1>
<%= form_with model: Post.new, :url => {:action => :create, :controller => :posts} do |form| %>
  <div>
    <%= form.label :title%>
    <%= form.text_field :title %>
    
  </div>
  <div>
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>

  <%= form.submit "Save post" %>
  <% end %>